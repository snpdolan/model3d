<div class="container-fluid">
	<h1><%= current_user.email %>'s Models</h1>

	<div class="container-fluid">
		<% @my_models.each do |thing| %>
			<div class="card">
				<div class="card-body">
					<div class="card-title"></div>
					<div class="card-text"><%=link_to thing.name, thing %></div>
					<br>
					<div class="card-footer text-muted text-right">
						<% if (Time.zone.now - thing.created_at).to_i / 1.day < 1 %>
							Created <%= time_ago_in_words(thing.created_at)%> ago.
						<% else %>
							Customized at <%= thing.created_at.strftime("%b #{thing.created_at.strftime("%e").to_i.ordinalize} %H:%M:%S") %>
						<% end %>
					</div>
					
				</div>
			</div>
			<br>
		<% end %>
	</div>

</div>